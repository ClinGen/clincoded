{
    "title": "Pathogenicity",
    "id": "/profiles/pathogenicity.json",
    "description": "Schema for storing variant pathogenic data.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["variant"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant uuid",
            "type": "string",
            "linkTo": "variant"
        },
        "consistentWithDiseaseMechanism": {
            "title": "Is Variant Consistent with Disease Mechanism?",
            "description": "Is variant consistent with disease mechanism?",
            "type": "boolean"
        },
        "withinFunctionalDomain": {
            "title": "Variant within Functional Domain",
            "type": "boolean"
        },
        "frequencySupportPathogenicity": {
            "title": "Does Frequency Data Support Pathogenicity",
            "type": "boolean"
        },
        "previouslyReported": {
            "title": "Previously Reported",
            "type": "boolean"
        },
        "denovoType": {
            "title": "de novo Type",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Inferred",
                "Confirmed"
            ]
        },
        "intransWithAnotherVariant": {
            "title": "in trans with Another Variant",
            "type": "boolean"
        },
        "supportingSegregation": {
            "title": "Supporting Segregation Data",
            "type": "boolean"
        },
        "supportingStatistic": {
            "title": "Supporting Statistical Data",
            "type": "boolean"
        },
        "supportingExperimental": {
            "title": "Supporting Functional Data",
            "type": "boolean"
        },
        "comment": {
            "title": "Comment",
            "type": "string",
            "default": ""
        },
        "assessments": {
            "title": "Assessments",
            "description": "List of assessments added from different curators",
            "type": "array",
            "default": [],
            "items": {
                "description": "Assessment uuid",
                "type": "string",
                "linkTo": "assessment"
            }
        }
    },
    "columns": {
        "uuid": {
            "title": "Item",
            "type": "string"
        },
        "associatedGdm": {
            "title": "GDM",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Owner",
            "type": "string"
        },
        "date_created": {
            "title": "Creation Date",
            "type": "string"
        },
        "last_modified": {
            "title": "Last Modified",
            "type": "string"
        },
        "numberOfAssessment": {
            "title": "# Assessment",
            "type": "string"
        }
    }
}
