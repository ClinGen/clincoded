{
    "title": "Gene",
    "description": "Schema for submitting a Gene.",
    "id": "/profiles/gene.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["organism", "name"],
    "identifyingProperties": ["uuid", "name-organism.name", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "dbxref": {
            "title": "External identifiers",
            "description": "Unique identifiers from external resources (e.g. HGNC, GeneID, UniProtKB or ENSEMBL).",
	        "type": "array",
            "default": [],
            "items": {
                "title": "External identifier",
                "description": "A unique identifier from external resource (e.g. HGNC, GeneID, UniProtKB or ENSEMBL).",
                "comment": "Submit as database name:gene name (e.g. HGNC:HMFN0395, GeneID:22809)",
                "type":  "string"
            }
        },
        "organism": {
            "title": "Organism",
            "description": "Organism bearing the gene.",
            "comment": "See organism.json for available identifiers.",
            "type": "string",
            "linkTo": "organism"
        },
        "name": {
            "title": "Name",
            "description": "HGNC or MGI identifier for the gene.",
            "comment": "Submit only the identifier (e.g. HMFN0395 or 22809).",
            "type": "string",
            "format": "gene_name"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "proposed",
            "enum": [
                "proposed",
                "current",
                "deleted",
                "replaced"
            ]
        }
    },
    "facets": {
        "organism.scientific_name": {
            "title": "Organism",
            "type": "string"
        }
    },
    "columns": {
        "label": {
            "title": "Gene",
            "type": "string"
        },
        "organism.scientific_name": {
            "title": "Species",
            "type": "string"
        },
        "dbxref": {
            "title": "External resources",
            "type": "array"
        }
    },
    "boost_values": {
        "gene_name": 1.0,
        "label": 1.0,
        "dbxref": 1.0,
        "aliases": 1.0,
        "organism.name": 1.0,
        "organism.scientific_name": 1.0,
        "organism.taxon_id": 1.0
    }
}
