{
    "title": "Interpretation",
    "id": "/profiles/interpretation.json",
    "description": "Schema for storing and using interpretation data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["variant"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "description": "Variant to be interpreted",
            "type": "string",
            "linkTo": "variant"
        },
        "genes": {
            "title": "Genes",
            "description": "List of genes related the variant",
            "type": "array",
            "default": [],
            "items": {
                "title": "Gene",
                "description": "uuid of a single gene.",
                "type": "string",
                "linkTo": "gene"
            }
        },
        "disease": {
            "title": "Disease",
            "description": "Disease associated to the variant. Could be none.",
            "type": "string",
            "default": "",
            "linkTo": "orphaPhenotype"
        },
        "interpretationTranscript": {
            "title": "Interpretation Transcript",
            "description": "User selected transcript",
            "type": "string",
            "default": ""
        },
        "transcripts": {
            "title": "Transcripts",
            "description": "List of transcript related to the variant",
            "type": "array",
            "default": [],
            "items": {
                "title": "Transcript",
                "type": "string",
                "linkTo": "transcript"
            }
        },
        "proteins": {
            "title": "Proteins",
            "description": "List of proteins related to the variant",
            "type": "array",
            "default": [],
            "items": {
                "title": "Protein",
                "type": "string",
                "linkTo": "protein"
            }
        },
        "evaluations": {
            "title": "Evaluations",
            "description": "List of evaluation involded in the interpretation",
            "type": "array",
            "default": [],
            "items": {
                "title": "Evaluation",
                "type": "string"
            }
        }
    },
    "columns": {
        "variant.clinvarVariantId": {
            "title": "ClinVar ID",
            "type": "string"
        },
        "variant.clinvarVariantTitle": {
            "title": "ClinVar Title",
            "type": "string"
        },
        "variant.otherDescription": {
            "title": "Other Description",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Creator",
            "type": "string"
        }
    }
}
