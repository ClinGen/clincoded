{
    "title": "Evaluation",
    "id": "/profiles/evaluation.json",
    "description": "Schema for storing criteria evaluation data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["variant", "criteria"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "type": "string",
            "linkTo": "variant"
        },
        "populations": {
            "title": "Population",
            "description": "List of population used as evidence to evaluate the criteria.",
            "type": "array",
            "items": {
                "type": "string",
                "linkTo": "population"
            }
        },
        "computational": {
            "title": "Computational",
            "description": "List of computational",
            "type": "array",
            "items": {
                "type": "string",
                "comment": "will link to object computational later."
            }
        },
        "disease": {
            "title": "Disease",
            "description": "Disease associated to the evidence",
            "type": "string",
            "linkTo": "orphaPhenotype"
        },
        "criteria": {
            "title": "Criteria",
            "description": "AMCG criteria to be evaluated. Must be one of the 28 codes",
            "comment": "See ACMG Standard and Guidelines paper for details",
            "type": "string"
        },
        "value": {
            "title": "Evaluation Value",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "The reason to select evaluation value.",
            "type": "string"
        }
    },
    "columns": {
        "variant.represent": {
            "title": "Variant",
            "type": "string"
        },
        "criteria": {
            "title": "Criteria",
            "type": "string"
        },
        "population_count": {
            "title": "# Population",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Evaluator",
            "type": "string"
        }
    }
}
