{
    "title": "Provisional Classification",
    "description": "Schema for storing and using assertions",
    "id": "/profiles/provisionalClassification.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["totalScore", "autoClassification"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "3"
        },
        "totalScore": {
            "title": "Total Score",
            "description": "Total score calculated from all selected evidences",
            "type": "number",
            "minimum": 0
        },
        "autoClassification": {
            "title": "Classification assigned automatically",
            "description": "Classification based on the calculation",
            "type": "string"
        },
        "alteredClassification": {
            "title": "Classification Altered",
            "description": "Classification assigned by curator",
            "type": "string"
        },
        "reasons": {
            "title": "Reasons",
            "description": "Reasons for changing the classification",
            "type": "string",
            "default": ""
        },
        "classificationStatus": {
            "title": "Mark status As Provisional Classification",
            "description": "Flag to mark classification status as provisional",
            "type": "string",
            "enum": [
                "In progress",
                "Provisional"
            ]
        },
        "evidenceSummary": {
            "title": "Evidence Summary",
            "description": "Evidence summary for the classification",
            "type": "string"
        },
        "replicatedOverTime": {
            "title": "Replication Over Time",
            "description": "Boolean value for greater than 2 pubs with convincing evidence over time",
            "type": "boolean",
            "default": false
        },
        "contradictingEvidence": {
            "title": "Contradictory Evidence",
            "type": "object",
            "default": {},
            "properties": {
                "proband": {
                    "title": "Proband Individual Evidence",
                    "description": "Boolean value for Proband Individual Evidence",
                    "type": "boolean",
                    "default": false
                },
                "caseControl": {
                    "title": "Case-Control Evidence",
                    "description": "Boolean value for Case-Control Evidence",
                    "type": "boolean",
                    "default": false
                },
                "experimental": {
                    "title": "Experimental Evidence",
                    "description": "Boolean value for Experimental Evidence",
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "active": {
            "title": "Active",
            "description": "Boolean switch for usage",
            "type": "boolean",
            "default": true
        }
    },
    "columns": {
        "submitted_by.title": {
            "title": "Owner",
            "type": "string"
        },
        "date_created": {
            "title": "Created Date",
            "type": "string"
        },
        "last_modified": {
            "title": "Last Modified",
            "type": "string"
        },
        "totalScore": {
            "title": "Total Score",
            "type": "number"
        },
        "autoClassification": {
            "title": "Assigned Classification",
            "type": "string"
        },
        "alteredClassification": {
            "title": "Altered Classification",
            "type": "string"
        },
        "classificationStatus": {
            "title": "Classification Status",
            "type": "string"
        },
        "reasons": {
            "title": "Reasons",
            "type": "string"
        },
        "active": {
            "title": "Active",
            "type": "boolean"
        }
    }
}
