{
    "title": "Curator history",
    "description": "Schema for tracking curator actions.",
    "id": "/profiles/curatorHistory.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["operationType"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "operationType": {
            "title": "Curator operation type",
            "description": "The class of operation that the curator performed",
            "type": "string",
            "enum": [
                "add",
                "modify",
                "delete"
            ]
        },
        "primary": {
            "title": "Primary object",
            "description": "Reference to the primary object",
            "type": "string",
            "linkTo": [
                "article",
                "assessment",
                "experimental",
                "family",
                "gdm",
                "group",
                "individual",
                "pathogenicity",
                "provisionalClassification",
                "variant"
            ]
        },
        "meta": {
            "title": "History meta",
            "description": "Type-dependent data about the history item",
            "type": "object",
            "properties": {
                "group": {
                    "title": "Group history",
                    "description": "History data for groups",
                    "type": "object",
                    "properties": {
                        "gdm": {
                            "title": "GDM",
                            "description": "GDM that's the object of the group",
                            "type": "string",
                            "linkTo": "gdm"
                        },
                        "article": {
                            "title": "Article",
                            "description": "GDM article the group provides evidence for",
                            "type": "string",
                            "linkTo": "article"
                        }
                    }
                }
            }
        }
    },
    "columns": {
        "operationType": {
            "title": "Curator operation type",
            "type": "string"
        },
        "primary": {
            "title": "Primary object information",
            "type": "object"
        },
        "meta.group.gdm": {
            "title": "GDM",
            "type": "string"
        },
        "meta.group.article": {
            "title": "Article",
            "type": "string"
        },
        "date_created": {
            "title": "Creation Date",
            "type": "string"
        },
        "uuid": {
            "title": "UUID",
            "type": "string"
        }
    }
}
