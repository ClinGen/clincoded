{
    "title": "Curator history",
    "description": "Schema for tracking curator actions.",
    "id": "/profiles/curatorHistory.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["operationType", "description"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "operationType": {
            "title": "Curator operation type",
            "description": "The class of operation that the curator performed",
            "type": "string",
            "enum": [
                "add",
                "modify",
                "delete"
            ]
        },
        "elements": {
            "title": "History elements",
            "description": "Elements describing the primary, secondary, and associated objects",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "P": {
                    "title": "Primary object information",
                    "description": "Information about the primary object of a history item",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "uri": {
                            "title": "Primary URI",
                            "description": "URI to link to the primary object display",
                            "type": "string"
                        },
                        "object": {
                            "title": "Primary object",
                            "description": "Reference to the primary object",
                            "type": "string",
                            "linkTo": [
                                "article",
                                "assessment",
                                "experimental",
                                "family",
                                "gdm",
                                "group",
                                "individual",
                                "pathogenicity",
                                "provisionalClassification",
                                "variant"
                            ]
                        }
                    }
                },
                "S": {
                    "title": "Secondary object information",
                    "description": "Information about the secondary object of a history item",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "uri": {
                            "title": "Secondary URI",
                            "description": "URI to link to the secondary object display",
                            "type": "string"
                        },
                        "object": {
                            "title": "Secondary object",
                            "description": "Reference to the secondary object",
                            "type": "string",
                            "linkTo": [
                                "article",
                                "assessment",
                                "experimental",
                                "family",
                                "gdm",
                                "group",
                                "individual",
                                "pathogenicity",
                                "provisionalClassification",
                                "variant"
                            ]
                        }
                    }
                },
                "A": {
                    "title": "Associated object information",
                    "description": "Information about the associated object of a history item",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "uri": {
                            "title": "Associated URI",
                            "description": "URI to link to the associated object display",
                            "type": "string"
                        },
                        "object": {
                            "title": "Associated object",
                            "description": "Reference to the associated object",
                            "type": "string",
                            "linkTo": [
                                "article",
                                "assessment",
                                "experimental",
                                "family",
                                "gdm",
                                "group",
                                "individual",
                                "pathogenicity",
                                "provisionalClassification",
                                "variant"
                            ]
                        }
                    }
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the operation with embedded codes to insert primary, secondary, and associated object references.",
            "type": "string",
            "default": ""
        }
    }
}
