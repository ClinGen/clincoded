{
    "title": "Annotation",
    "id": "/profiles/annotation.json",
    "description": "List of evidence in a gdm",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["article"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "4"
        },
        "article": {
            "title": "Article",
            "description": "PMID of article from where evidence is picked",
            "type": "string",
            "linkTo": "article"
        },
        "groups": {
            "title": "Group",
            "description": "List of group ids",
            "type": "array",
            "default": [],
            "items": {
                "title": "Group ID",
                "description": "Group id",
                "type": "string",
                "linkTo": "group"
            }
        },
        "families": {
            "title": "Family",
            "descripton": "List of Family IDs which do not belong to any group in the annotation",
            "type": "array",
            "default": [],
            "items": {
                "title": "Family ID",
                "description": "Family id",
                "type": "string",
                "linkTo": "family"
            }
        },
        "individuals": {
            "title": "Individual",
            "descripton": "List of Individual IDs which do not belong to any group and any family in the annotaion",
            "type": "array",
            "default": [],
            "items": {
                "title": "Individual ID",
                "description": "Individual id",
                "type": "string",
                "linkTo": "individual"
            }
        },
        "experimentalData": {
            "title": "Experimental Data Analysis",
            "descripton": "List of ExperimentalData ids",
            "type": "array",
            "default": [],
            "items": {
                "title": "ExperimentalData ID",
                "description": "ExperimentalData id",
                "type": "string",
                "linkTo": "experimental"
            }
        },
        "caseControlStudies": {
            "title": "Case Control Study",
            "description": "List of case-control study",
            "type": "array",
            "items": {
                "title": "Case Control",
                "type": "string",
                "linkTo": "caseControl"
            }
        },
        "active": {
            "title": "Active",
            "description": "Boolean switch for using the annotation",
            "type": "boolean",
            "default": true
        },
        "affiliation": {
            "title": "Affiliation",
            "description": "The affiliation this annotation is associated with.",
            "type": "string"
        },
        "articleNotes": {
            "title": "Article Notes",
            "description": "Notes for PubMed",
            "type": "object",
            "properties": {
                "nonscorable": {
                    "title": "Non-scorable",
                    "description": "Non-scorable Notes",
                    "type": "object",
                    "properties": {
                        "checked": {
                            "title": "Non-scorable Checked",
                            "description": "Boolean for whether or not non-scorable is checked",
                            "type": "boolean"
                        },
                        "text": {
                            "title": "Non-scorable Text",
                            "description": "Explanation for non-scorable evidence",
                            "type": "string"
                        }
                    }
                },
                "other": {
                    "title": "Other",
                    "description": "Other Notes",
                    "type": "object",
                    "properties": {
                        "checked": {
                            "title": "Other Checked",
                            "description": "Boolean for whether or not other is checked",
                            "type": "boolean"
                        },
                        "text": {
                            "title": "Other Text",
                            "description": "Other comments on PubMed article",
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "columns": {
        "article.pmid": {
            "title": "PMID",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Curator",
            "type": "string"
        },
        "date_created": {
            "title": "Date/Time",
            "type": "string"
        },
        "number_group": {
            "title": "# Group",
            "type": "string"
        },
        "number_family": {
            "title": "# Family",
            "type": "string"
        },
        "number_individual": {
            "title": "# Individual",
            "type": "string"
        },
        "number_experimental": {
            "title": "# Experimental",
            "type": "string"
        }
    }
}
