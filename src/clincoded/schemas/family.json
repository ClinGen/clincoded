{
    "title": "Family",
    "id": "/profiles/family.json",
    "description": "Schema for storing and using family data",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["label", "commonDiagnosis", "method"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/shared_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "label": {
            "title": "Label",
            "description": "An user entered label for the family",
            "type": "string"
        },
        "commonDiagnosis": {
            "title": "Common Diagnosis",
            "description": "OrphaNumber of common diagnosis for the family",
            "type": "string",
            "linkTo": "orphaPhenotype"
        },
        "hpoIdInDiagnosis": {
            "title": "HPO ID(s)",
            "description": "List of HPO ID for the disease",
            "type": "array",
            "default": [],
            "items": {
                "title": "HPO ID",
                "description": "HPO ID",
                "type": "string"
            }
        },
        "termsInDiagnosis": {
            "title": "None-HPO term(s)",
            "description": "List of none-HPO terms for the disease",
            "type": "string",
            "default": ""
        },
        "hpoIdInElimination": {
            "title": "HPO ID(s) Eliminated",
            "description": "List of HPO IDs eliminated from the disease",
            "type": "array",
            "default": [],
            "items": {
                "title": "HPO IDs Eliminated",
                "description": "HPO ID eliminated",
                "type": "string"
            }
        },
        "termsInDiagnosis": {
            "title": "None-HPO term(s) Eliminated",
            "description": "List of none-HPO terms eliminated from the disease",
            "type": "string",
            "default": ""
        },
        "numberOfMale": {
            "title": "Number of Male",
            "description": "Count of Male in the family",
            "type": "string",
            "default": ""
        },
        "numberOfFemale": {
            "title": "Number of Female",
            "description": "Count of female in the family",
            "type": "string",
            "default": ""
        },
        "countryOfOrigin": {
            "title": "Country Of Origin",
            "description": "Country in which the family original live",
            "type": "string",
            "default": ""
        },
        "ethnicity": {
            "title": "Ethnicity",
            "description": "Ethnicity",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Hispanic or Latino",
                "Not Hispanic or Latino"
            ]
        },
        "race": {
            "title": "Race",
            "description": "Race",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "American Indian or Alaska Native",
                "Asian",
                "Black",
                "Native Hawaiian or Other Pacific Islander",
                "White",
                "Mixed",
                "Unknown"
            ]
        },
        "ageRangeType": {
            "title": "Type of Age Range",
            "description": "Type of age range in family",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Onset",
                "Report",
                "Diagnosis",
                "Death"
            ]
        },
        "ageRangeFrom": {
            "title": "Age Range From",
            "description": "Yongest age in the family",
            "type": "string",
            "default": ""
        },
        "ageRangeTo": {
            "title": "Age Range To",
            "description": "Oldest age in the family",
            "type": "string",
            "default": ""
        },
        "ageRangeUnit": {
            "title": "Age Range Unit",
            "description": "Unit of age",
            "type": "string",
            "default": "",
            "enum": [
                "",
                "Days",
                "Weeks",
                "Months",
                "Years"
            ]
        },
        "method": {
            "title": "Method",
            "description": "Mothed id",
            "type": "string",
            "linkTo": "method"
        },
        "segregation": {
            "title": "Segregation Study",
            "description": "Segregation study associated to the family",
            "type": "string",
            "linkTo": "segregation"
        },
        "variants": {
            "title": "Variants Associated with Proband",
            "description": "List of variants asscociated with proband",
            "type": "array",
            "default": [],
            "items": {
                "title": "Variant uuid",
                "type": "string",
                "linkTo": "variant"
            }
        },
        "additionalInformation": {
            "title": "Additional Information",
            "description": "List of Additional information of the family",
            "type": "array",
            "default": [],
            "items": {
                "title": "Itme",
                "description": "",
                "type": "string"
            }
        },
        "individualIncluded": {
            "title": "Individual Included",
            "description": "List of individuals included in the family",
            "type": "array",
            "default": [],
            "items": {
                "title": "Individual",
                "description": "Individual id",
                "type": "string",
                "linkTo": "individual"
            }
        },
        "dateTime": {
            "title": "Date and Time",
            "description": "Time stamp of the family creation",
            "type": "string",
            "default": ""
        }
    },
    "columns": {
        "label": {
            "title": "Label",
            "type": "string"
        },
        "commonDiagnosis.orphaNumber": {
            "title": "Diagnosis",
            "type": "string"
        },
        "method": {
            "title": "Method",
            "type": "string"
        },
        "variants": {
            "title": "Variants",
            "type": "string"
        },
        "individualIncluded": {
            "title": "Individual",
            "type": "string"
        }
    }
}
