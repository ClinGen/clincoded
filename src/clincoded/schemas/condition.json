{
    "title": "Condition",
    "description": "Schema for submitting a condition or disease",
    "id": "/profiles/condition.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["label", "condition_term_name"],
    "identifyingProperties": ["uuid", "label", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "conditiona_term_id": {
            "@type": "@id",
            "title": "Ontology ID",
            "description": "Ontology identifier describing condition or disease.",
            "comment": "NTR is a new term request identifier provided by the DCC.",
            "type": "string",
            "pattern": "^(DO|ORPHANET|MONARCH):[0-9]{2,8}$"
        },
        "condition_term_name": {
            "@id": null,
            "title": "Ontology term",
            "description": "Ontology term describing condition or disease.",
            "type":  "string"
        },
        "phenotypes": {
            "title": "Phenotypes",
            "description": "Phenotypes associated with this condition",
            "type": "array",
            "default": [],
            "items": {
                "title": "Phenotypes",
                "description": "Phenotypes associated with this condition",
                "type":  "string",
                "linkTo": "phenotype"
            }
        },
        "label": {
            "title": "Descriptive name of condition or disease",
            "description": "Common name for the condition or disease",
            "type": "string",
            "format": "condition_label"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "proposed",
            "enum": [
                "proposed",
                "current",
                "deleted",
                "replaced"
            ]
        }
    }
}
