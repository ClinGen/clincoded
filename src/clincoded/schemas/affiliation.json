{
    "title": "Affiliation",
    "id": "/profiles/affiliation.json",
    "description": "Schema for storing curator affiliations data.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["affiliationId"],
    "identifyingProperties": ["uuid", "affiliationId"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/shared_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "affiliationId": {
            "title": "Unique identifier of an affiliation",
            "description": "Affiliation identifier consisting of a 5-digit number.",
            "type": "string",
            "pattern": "^[0-9]+$",
            "uniqueKey": "affiliation:affiliationId"
        },
        "affiliation_abbreviation": {
            "title": "Abbreviation",
            "description": "An abbreviated name for the affiliation.",
            "type": "string",
            "default": ""
        },
        "affiliation_fullname": {
            "title": "Full Name",
            "description": "The full name for the affiliation.",
            "type": "string",
            "default": ""
        }
    },
    "columns": {
        "affiliationId": {
            "title": "ID",
            "type": "string"
        },
        "affiliation_abbreviation": {
            "title": "Abbreviation",
            "type": "string"
        },
        "affiliation_fullname": {
            "title": "Full Name",
            "type": "string"
        }
    }
}
