{
    "title": "Population",
    "id": "/profiles/population.json",
    "description": "Schema for storing population data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "mafs": {
            "title": "Allele Frequency",
            "description": "List of allele frequency data.",
            "type": "array",
            "items": {
                "type": "object",
                "description": "MAF data saved as key:value pairs",
                "comment": "No property declared. Flexiable for different key:value format. See test data for exsample."
            }
        },
        "variant": {
            "title": "Variant",
            "type": "string",
            "linkTo": "variant"
        }
    },
    "columns": {
        "variant.represent": {
            "title": "Variant",
            "type": "string"
        },
        "maf_count": {
            "title": "# MAF",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Capturer",
            "type": "string"
        }
    }
}
