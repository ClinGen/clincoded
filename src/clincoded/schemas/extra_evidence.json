{
    "title": "extra_evidence",
    "id": "/profiles/extra_evidence.json",
    "description": "Extra evidence group for a VCI interpretation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["variant", "evidenceDescription"],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "6"
        },
        "variant": {
            "title": "Variant",
            "description": "Variant associated with external evidence",
            "type": "string",
            "linkTo": "variant"
        },
        "category": {
            "title": "Category",
            "description": "Category the external evidence is in",
            "type": "string"
        },
        "subcategory": {
            "title": "Subcategory",
            "description": "Subcategory the external evidence is in",
            "type": "string"
        },
        "articles": {
            "title": "List of articles",
            "description": "List of articles part of this external evidence group",
            "type": "array",
            "default": [],
            "items": {
                "title": "Article",
                "description": "Article",
                "type": "string",
                "linkTo": "article"
            }
        },
        "evidenceCriteria": {
            "title": "Criteria",
            "description": "the criteria associated with the PMID",
            "type": "string"
        },
        "evidenceDescription": {
            "title": "Description",
            "description": "Description for external evidence",
            "type": "string"
        },
        "experimentalType": {
            "title": "Experimental Type",
            "description": "Experimental Type",
            "type": "string"
        },
        "affiliation": {
            "title": "Affiliation",
            "description": "The affiliation this classification is associated with.",
            "type": "string"
        },
        "sourceInfo": {
            "title": "Sources",
            "description": "Additional evidence from a variety of sources (Pubmed, Clinical lab, Research lab, Clinic, Public Database, Registered Curator, Other)",
            "type": "object"
        }
    },
    "columns": {
        "evidenceCriteria": {
            "title": "Criteria",
            "type": "string"
        },
        "evidenceDescription": {
            "title": "Description",
            "type": "string"
        },
        "affiliation": {
            "title": "Affiliation",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Curator",
            "type": "string"
        },
        "date_created": {
            "title": "Date/Time",
            "type": "string"
        }
    }
}
