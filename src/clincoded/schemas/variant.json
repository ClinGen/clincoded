{
    "title": "Variant",
    "id": "/profiles/variant.json",
    "description": "Schema for storing and using variant data",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "clinvarVariantId": {
            "title": "Variant ID",
            "description": "ClinVar Variant ID",
            "type": "string"
        },
        "dbSNPId": {
            "title": "dbSNP ID",
            "description": "dbSNP id of the variant",
            "type": "string",
            "default": ""
        },
        "clinVarRCV": {
            "title": "ClinVar ID",
            "description": "ClinVar id for the variant",
            "type": "string",
            "default": ""
        },
        "hgvsNames": {
            "title": "HGVS Names",
            "description": "List of HGVS names of the variant",
            "type": "array",
            "default": [],
            "items": {
                "title": "HGVS Name",
                "type": "string",
                "default": ""
            }
        },
        "otherDescription": {
            "title": "Other Description",
            "description": "List of other descriptions",
            "type": "string",
            "default": ""
        }
    },
    "columns": {
        "uuid": {
            "title": "Variant",
            "type": "string"
        },
        "clinvarVariantId": {
            "title": "Variant ID",
            "type": "string"
        },
        "dbSNPId": {
            "title": "dbSNP ID",
            "type": "string"
        },
        "clinVarRCV": {
            "title": "ClinVar RCV",
            "type": "string"
        },
        "hgvsNames": {
            "title": "HGVS Name(s)",
            "type": "array"
        },
        "otherDescription": {
            "title": "Other Description",
            "type": "string"
        }
    }
}
