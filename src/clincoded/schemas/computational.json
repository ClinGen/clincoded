{
    "title": "Computational",
    "id": "/profiles/computational.json",
    "description": "Schema for storing computational data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "type": "string",
            "linkTo": "variant"
        },
        "computationalTools": {
            "type": "object",
            "properties": {
                "proteinPredictors": {
                    "title": "Protein Predictors",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "conservationAnalysis": {
                    "title": "Conservation Analysis",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "splicingPredictions": {
                    "title": "Splicing Predictions",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "averageChangeToNearestSplice": {
                    "title": "Average Change to Nearest Splice Site",
                    "type": "number"
                },
                "distanceToNearestSplice": {
                    "type": "number"
                },
                "exonLocation": {
                    "description": "Location of affected exon",
                    "type": "number"
                }
            }
        },
        "otherVariantsInCodon": {
            "title": "Other Variants in Codon",
            "description": "List of variants.",
            "type": "array",
            "items": {
                "title": "Variant",
                "type": "object",
                "properties": {
                    "source": {
                        "title": "Source",
                        "description": "External source of the variant",
                        "type": "string"
                    },
                    "sourceId": {
                        "title": "Source ID",
                        "description": "Primary key of the variant in external source",
                        "type": "string"
                    },
                    "clinical": {
                        "title": "Clinical Type",
                        "description": "Varaint interpretation on pathogenicity",
                        "type": "string"
                    },
                    "protein": {
                        "title": "Protein Presentation",
                        "type": "string"
                    },
                    "cDNA": {
                        "title": "cDNA Presentation",
                        "type": "string"
                    }
                }
            }
        }
    },
    "columns": {
        "variant.represent": {
            "title": "Variant",
            "type": "string"
        },
        "criteria_count": {
            "title": "# Criterion",
            "type": "number"
        }
    }
}
