{
    "title": "Computational",
    "id": "/profiles/computational.json",
    "description": "Schema for storing computational data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "type": "string",
            "linkTo": "variant"
        },
        "computationalTools": {
            "type": "object",
            "properties": {
                "proteinPredictors": {
                    "title": "Protein Predictors",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "conservationAnalysis": {
                    "title": "Conservation Analysis",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "splicingPredictions": {
                    "title": "Splicing Predictions",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "averageChangeToNearestSplice": {
                    "title": "Average Change to Nearest Splice Site",
                    "type": "number"
                },
                "distanceToNearestSplice": {
                    "type": "number"
                },
                "exonLocation": {
                    "description": "Location of affected exon",
                    "type": "number"
                }
            }
        },
        "computationalData": {
            "title": "Computational Data",
            "description": "Temp property to store blob computational data.",
            "type": "object",
            "comment": "No property defined. Flexible for saving different key:value formats."
        }
    },
    "columns": {
        "variant.represent": {
            "title": "Variant",
            "type": "string"
        },
        "criteria_count": {
            "title": "# Criterion",
            "type": "number"
        }
    }
}
