{
    "title": "Computational",
    "id": "/profiles/computational.json",
    "description": "Schema for storing computational data for Variant Curation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/standard_status" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "type": "string",
            "linkTo": "variant"
        },
        "computationalTools": {
            "comment": "Criteria related: (BP4 or PP3) and/or BP7 ",
            "type": "object",
            "properties": {
                "proteinPredictors": {
                    "title": "Protein Predictors",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "source": {
                                "title": "Source",
                                "type": "string"
                            },
                            "score": {
                                "title": "Score",
                                "type": "number"
                            },
                            "prediction": {
                                "title": "Prediction",
                                "type": "string"
                            }
                        }
                    }
                },
                "conservationAnalysis": {
                    "title": "Conservation Analysis",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "source": {
                                "title": "Source",
                                "type": "string"
                            },
                            "score": {
                                "title": "Score",
                                "type": "number"
                            },
                            "prediction": {
                                "title": "Prediction",
                                "type": "string"
                            }
                        }
                    }
                },
                "splicingPredictions": {
                    "title": "Splicing Predictions",
                    "type": "object",
                    "properties": {
                        "averageChangeToNearestSplice": {
                            "title": "Average Change to Nearest Splice Site",
                            "type": "number"
                        },
                        "predictionData": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "source": {
                                        "title": "Source",
                                        "type": "string"
                                    },
                                    "directionality": {
                                        "title": "5 Prime End or 3 Prime End",
                                        "type": "string"
                                    },
                                    "range": {
                                        "title": "Range",
                                        "type": "string"
                                    },
                                    "value": {
                                        "title": "Prediction",
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "additionalInfo": {
                    "title": "Additional Information",
                    "type": "object",
                    "properties": {
                        "distanceToNearestSplice": {
                            "type": "number"
                        },
                        "exonLocation": {
                            "description": "Location of affected exon",
                            "type": "number"
                        }
                    }
                }
            }
        },
        "otherVariantsInCodon": {
            "comment": "Criteria related: PS1 and/or PM5",
            "title": "Other Variants in Codon",
            "description": "List of variants within codon.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "cDNA": {
                        "title": "cDNA",
                        "type": "string"
                    },
                    "protein": {
                        "title": "Protein Presentation",
                        "type": "string"
                    },
                    "clinicalType": {
                        "title": "Clinical Type of Variant",
                        "description": "Variant interpretation on pathogenicity",
                        "type": "string",
                        "comment": "This property is relevant to data field Interpretation in UI"
                    },
                    "source": {
                        "title": "Source",
                        "description": "Source of the variant",
                        "type": "string"
                    },
                    "sourceId": {
                        "title": "Source ID",
                        "description": "Primary ID of the variant in source",
                        "type": "string"
                    }
                }
            }
        }
    },
    "columns": {
        "variant.variant_identifier": {
            "title": "Variant",
            "type": "string"
        },
        "criteria_list": {
            "title": "Criteria Met",
            "type": "string"
        }
    }
}
