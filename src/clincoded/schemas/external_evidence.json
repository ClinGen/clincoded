{
    "title": "external_evidence",
    "id": "/profiles/external_evidence.json",
    "description": "External evidence group for a VCI interpretation",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "identifyingProperties": ["uuid"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/standard_status" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "variant": {
            "title": "Variant",
            "description": "Variant associated with external evidence",
            "type": "string",
            "linkTo": "variant"
        },
        "category": {
            "title": "Category",
            "description": "Category the external evidence is in",
            "type": "string"
        },
        "subcategory": {
            "title": "Subcategory",
            "description": "Subcategory the external evidence is in",
            "type": "string"
        },
        "articles": {
            "title": "List of articles",
            "descripton": "List of articles part of this external evidence group",
            "type": "array",
            "default": [],
            "items": {
                "title": "Article",
                "description": "Article",
                "type": "string",
                "linkTo": "article"
            }
        },
        "description": {
            "title": "Description",
            "description": "Description for external evidence",
            "type": "string"
        }
    },
    "columns": {
        "description": {
            "title": "Description",
            "type": "string"
        },
        "submitted_by.title": {
            "title": "Curator",
            "type": "string"
        },
        "date_created": {
            "title": "Date/Time",
            "type": "string"
        }
    }
}
