{
    "title": "Transcript",
    "id": "/profiles/transcript.json",
    "description": "Schema for storing and using transcript data",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [],
    "identifyingProperties": ["uuid", "sourceId"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "source": {
            "title": "Source",
            "description": "What out source database the transcript data has been retrieved from",
            "type": "string"
        },
        "sourceId": {
            "title": "Source ID",
            "description": "Primary key in the out source db.",
            "type": "string"
        },
        "active": {
            "title": "Active",
            "description": "Boolean switch for usage",
            "type": "boolean",
            "default": true
        }
    },
    "columns": {
        "sourceId": {
            "title": "Source ID",
            "type": "string"
        },
        "source": {
            "title": "Source",
            "type": "string"
        }
    }
}
